<div class="modal fade" id="createCardmodal" tabindex="-1" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span>&times;</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title"><i class="fa fa-file-text-o" /> New card</h4>
            </div>
            <div class="modal-body">
                <div class="dropdown">
                    <h4 class="modal-title">Deck</h4>
                    <button type="button" data-toggle="dropdown" role="button">
                    <span class="currentDeck"></span>
                    <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu deckDropdown" role="menu"></ul>
                </div>
                <hr class="divider">
                <div class="form-group">
                    <label class="control-label">Front</label>
                    <textarea class="form-control" id="front" tabindex="1"></textarea>
                </div>
                <div class="form-group">
                    <label class="control-label">Back</label>
                    <textarea class="form-control back" id="back" tabindex="2"></textarea>
                </div>
                <div class="form-group">
                    <label class="control-label">Tags</label>
                    <input type="text" class="form-control tag" id="tag" tabindex="3">
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default fa fa-exchange btn-bigger pull-left" title="Switch card sides" id="switch"></button>
                <a href="./browser.html" target="_blank" role="button" class="btn btn-default fa fa-globe btn-bigger pull-left" title="Browse deck" id="browseDeck"></a>
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="add-card" tabindex="4">Add</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="createCardmodal" tabindex="-1" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span>&times;</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title"><i class="fa fa-file-text-o" /> New card</h4>
            </div>
            <div class="modal-body">
                <div class="dropdown">
                    <h4 class="modal-title">Deck</h4>
                    <button id="dLabel" type="button" data-toggle="dropdown" role="button">
                    <span class="currentDeck"></span>
                    <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu deckDropdown" role="menu"></ul>
                </div>
                <hr class="divider">
                <div class="form-group">
                    <label for="front" class="control-label">Front</label>
                    <textarea class="form-control" id="front"></textarea>
                </div>
                <div class="form-group">
                    <label for="back" class="control-label">Back</label>
                    <textarea class="form-control back" id="back"></textarea>
                </div>
                <div class="form-group">
                    <label for="tag" class="control-label">Tags</label>
                    <input type="text" class="form-control tag" id="tag">
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default fa fa-exchange btn-exchange pull-left" title="Switch card sides" id="switch"></button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="add-card">Add</button>
            </div>
        </div>
    </div>
</div>
